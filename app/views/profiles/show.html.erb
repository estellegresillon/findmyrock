<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <h2>My dashboard</h2>
    <p>Hello, <%= current_user.first_name %> <%= current_user.last_name %>

    <% if current_user.band %>
      <p><%= current_user.band.name %></p>
      <p><%= current_user.band.music_style %></p>
      <p><%= current_user.band.price %></p>
      <p><%= current_user.band.service_duration %></p>
      <p><%= current_user.band.number_of_musicians %></p>
      <p><%= current_user.band.description %></p>
    <% else %>
      <%= link_to "Add your band", new_band_path, class: "btn-yellow" %>
    <% end %>

    <div class="buttons">
      <%= link_to "Edit band",  edit_band_path(current_user), class: "btn-yellow" %>
      <%= link_to 'Delete band', band_path(current_user), method: :delete, class: "btn-yellow" %>
      </div>
    </div>

    </div>
  </div>
</div>
