<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <h1>CREATE YOUR BAND</h1>

    <%= simple_form_for @band do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price_per_hour %>
      <%= f.input :number_of_musicians %>
      <%= f.input :service_duration %>
      <%= f.input :music_style %>

      <%= f.submit "Create your band", class: "btn-yellow" %>
    <% end %>
    </div>
  </div>
</div>
